{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/students": {
      "post": {
        "summary": "Creates a student",
        "tags": [
          "Studnets"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "student",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "name"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Student created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "summary": "Retrieves a student",
        "tags": [
          "Students"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "name found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name"
              ]
            }
          },
          "404": {
            "description": "student not found"
          }
        }
      }
    }
  }
}